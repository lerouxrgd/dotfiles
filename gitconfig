[include]
    path = ~/.config/git/gitconfig-personal
    path = ~/.config/git/gitconfig-work

[commit]
    gpgsign = true

[core]
    excludesfile = ~/.config/git/ignore

[merge]
    conflictStyle = diff3

# sudo pacman -Syu git-delta
[delta]
    side-by-side = true
    syntax-theme = Coldark-Dark

[alias]
    # git sbs diff
    sbs = !git -c 'pager.show="delta"' -c 'pager.diff="delta"'
